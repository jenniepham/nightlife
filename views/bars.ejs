<html ng-app="vote">
<head>
  <title>Dragg!</title>
   <link rel="stylesheet" href="bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link href="https://fonts.googleapis.com/css?family=Baloo+Bhaina|Merriweather|Ubuntu" rel="stylesheet">
  <link rel="stylesheet" href="index.css" media="screen">
</head>
<body>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>



<div class="header">
  <div class="header-buttons">
    <div class='logo'>
     <a href="/"><img src="images/logo-small.png"></a>
    </div>
    <div class="wordbuttons">
     <% if (user) { %>
     <a href="/home">dashboard</a>
     <a href="/bars">local bars</a>
     <% } %>
     <% if (!user) { %>
        <a href="/login">log-in</a>
     <% } %>
     <% if (user) { %>
        <a href="/logout">log-out</a>
        <p id="username">Hi, <%= user.local.username %></p>
     <% } %>
     
    </div>

 </div>
</div>

<div class="appBody">
    <center>

<div class='sectionTitle'>
    Local bars near
    <b><%=userLocation%></b> 
    
    <form method='post' action=''>
        Enter to change your location<br>
    <input id='userLoc' name='locationInput' type='text'></input>
    <input class='userLoc' type='submit' value='submit'></input>
    </form>
    
</div>


<div class='searchResult'>
    
   <% data.forEach(function(a){%>
       
       <div class='entry'>
           <div class='entryIMG'><img src='<%=a.image_url%>'></div>
           <div class='entryTEXT'>
               <a target='_blank' href='<%=a.url%>'><b><%=a.name%></a></b> <a href="javascript:window.open('bar?name=<%=a.name%>','<%=a.name%>','width=600,height=450')"><i class="fa fa-plus-square" aria-hidden="true"></i></a><br> 
               <img src='<%=a.rating_img_url_small%>'><br>
               <%=a.location.address%> - <%=a.location['postal_code']%> (<%=a.phone%>)<br>
               <%=a['snippet_text']%>
           </div>
       </div>
       
   <% }) %>

</center>
</div>


<br><br>

</center>
</div>


</body>
</html>
